<div id="wrap">
	<div id="header">
		<h1 class="inline">Welcome!</h1>
	</div>
	<div id="mid">
		<div id="registration" class="box">
			<h1>Register</h1>

			<form action="<%= users_path %>" method="post">
				<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
				<label>First Name: <input type="text" name="user[fname]"></label>
				<label>Last Name: <input type="text" name="user[lname]"></label>
				<label>Email: <input type="email" name="user[email]"></label>
				<label>Password:<input type="password" name="user[password]"></label>
				<label><input class="green" type="submit" name="submit" value="Register"></label>
			</form>
		</div>
		
	<div id="login" class="box">
		<h1>Login</h1>
		<form action="<%= sessions_path %>" method="post">
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<label>Email: <input type="email" name="user[email]"></label>
			<label>Password:<input type="password" name="user[password]"></label>
			<label><input class="green"  type="submit" name="submit" value="Login"></label>
		</form>
	</div>

	</div>
</div>